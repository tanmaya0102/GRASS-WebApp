<%- include("partials/header") %>
<link rel="stylesheet" href="stylesheets/shop.css">
</head>
<body>
    <%- include("partials/nav") %>

    <div class="container">
        <h1 class="pageHeading">Shop</h1>
        
        <form class="searchForm" action="">
            <select name="" id="">
                <option value="All">All</option>
                <option value="All">Fashion</option>
                <option value="All">Furniture</option>
                <option value="All">Health</option>
                <option value="All">Household</option>
                <option value="All">Personal hygiene</option>
                <option value="All">Toys</option>
            </select>
            <input type="search"/>
            <button><img src="images/search-icon.svg" alt="" srcset=""></button>
        </form>

        <div class="shopsDiv">
            
            <% products.forEach(function(prod){ %>
            <div class="shop">
                    <div class="productImage">
                        <img src=<%- prod.productImage %>>
                    </div>
                    <div class="details">
                        <div class="productName"><a class="prodPageLink" href=<%-prod.productPageLink%>><%- prod.product %></a></div>
                        <div class="productPrice"><%- prod.price %> points</div>
                    </div>
            </div>
            <% }); %>

        </div>
    </div>
    
<%- include("partials/footer") %>
